{
    "name": "yan-static-site-experiment",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: Write tests!!\" && exit 1",
        "prebuild": "rimraf public/",
        "build": "npm-run-all build:*",
        "start": "npm-run-all build:sass --parallel watch:*",
        "watch:sass": "npm run build-sass -- --watch",
        "build-sass": "sass src/scss:public/css",
        "build:sass": "npm run build-sass -- --style compressed",
        "build:js": "rollup -c",
        "prod-build": "ELEVENTY_PRODUCTION=true eleventy",
        "build:eleventy": "eleventy",
        "watch:eleventy": "npm run build:eleventy -- --serve",
        "lint": "npm-run-all --parallel lint:*",
        "lint-fix": "npm-run-all --parallel fix:*",
        "lint-html": "prettier \"src/**/*.{html,handlebars,njk,md}\"",
        "lint:html": "npm run lint-html -- --check",
        "fix:html": "npm run lint-html -- --write",
        "lint:scss": "stylelint \"src/**/*.scss\"",
        "fix:scss": "npm run lint-scss -- --fix",
        "lint:js": "eslint *.js \"src/**/*.js\"",
        "fix:js": "npm run lint-js -- --fix",
        "prepare": "husky install",
        "sassdoc": "sassdoc src/scss --theme herman"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vidhill/yan-static-site-experiment.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/vidhill/yan-static-site-experiment/issues"
    },
    "homepage": "https://github.com/vidhill/yan-static-site-experiment#readme",
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@fortawesome/fontawesome-svg-core": "^1.2.35",
        "@fortawesome/free-brands-svg-icons": "^5.15.3",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@vidhill/fortawesome-brands-11ty-shortcode": "^1.0.1",
        "eleventy-plugin-svg-contents": "^0.7.0",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-vidhill": "^2.0.1",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "markdown-it": "^12.0.6",
        "npm-run-all": "^4.1.5",
        "prettier": "2.3.0",
        "rimraf": "^2.7.1",
        "rollup": "^2.52.3",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.34.0",
        "sassdoc": "^2.7.3",
        "sassdoc-theme-herman": "^4.0.2",
        "stylelint": "^13.13.1",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "stylelint-config-standard": "^22.0.0"
    }
}
