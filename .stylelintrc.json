{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-sass-guidelines",
        "stylelint-config-idiomatic-order"
    ],
    "rules": {
        "order/properties-alphabetical-order": null,
        "declaration-empty-line-before": null,
        "max-nesting-depth": 2,
        "selector-max-compound-selectors": 3
    },
    "ignoreFiles": ["public/**/*.*"]
}
