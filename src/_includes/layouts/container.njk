---
layout: layouts/base.njk
templateClass: tmpl-home
footerLinks:
    - label: Github
      link: https://github.com/vidhill
      svgPath: github
    - label: Twitter
      link: https://twitter.com/vidhill
      svgPath: twitter
---

<header>
    <h1>{{siteData.title}}</h1>
</header>
<main>{{ content | safe }}</main>
<footer>
    {% for item in footerLinks %}
    <a target="_blank" href="{{ item.link }}" class="social-links"> {% fortawesomeBrand item.svgPath, "social-icon" %} {{ item.label }} </a>
    {% endfor %}
</footer>
